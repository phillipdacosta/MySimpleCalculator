<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f1efef"
    tools:context="com.example.phillipdacosta.mysimplecalculator.MainActivity">



    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter first number"
        android:textColor="#008888"
        android:textColorLink="@android:color/darker_gray"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="27dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter second number"
        android:textColor="#008888"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/etNumber1"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:id="@+id/btnAddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:shadowColor="@android:color/holo_orange_dark"
        android:text="+"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="202dp"
        android:background="@android:color/holo_orange_light"
        />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="202dp"
        android:layout_alignBaseline="@+id/btnAddition"
        android:layout_alignBottom="@+id/btnAddition"
        android:layout_toRightOf="@+id/btnAddition"
        android:layout_toEndOf="@+id/btnAddition"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/holo_orange_light"
        />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="202dp"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/btnSubtract"
        android:layout_alignBottom="@+id/btnSubtract"
        android:layout_toRightOf="@+id/btnSubtract"
        android:layout_toEndOf="@+id/btnSubtract"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDivide"
        android:layout_alignBottom="@+id/btnDivide"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnDivide"
        android:layout_toRightOf="@+id/btnDivide"
        android:background="@android:color/holo_orange_light"
        android:text="*"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/etNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnAddition"
        android:layout_alignEnd="@+id/btnAddition"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etnumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnAddition"
        android:layout_alignEnd="@+id/btnAddition"
        android:gravity="center"/>

    <EditText
        android:id="@+id/tvResult"
        android:layout_width="595dp"
        android:layout_height="52dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="8"
        android:inputType="textPersonName"
        android:textSize="14pt"
        android:textColor="#800000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="324dp"

        android:background="@android:color/holo_red_dark"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAddition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="5pt"
        android:textColor="#800000"
        android:layout_below="@+id/etnumber2"
        android:layout_toLeftOf="@+id/btnSubtract"
        android:layout_toStartOf="@+id/btnSubtract"
        android:text="CLEAR" />
</android.widget.RelativeLayout>

